<%- model_class = Society -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @society.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @society.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pincode) %>:</strong></dt>
  <dd><%= @society.pincode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:est_date) %>:</strong></dt>
  <dd><%= @society.est_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @society.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:builder) %>:</strong></dt>
  <dd><%= @society.builder %></dd>
  <dt><strong><%= model_class.human_attribute_name(:area) %>:</strong></dt>
  <dd><%= @society.area %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              societies_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_society_path(@society), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              society_path(@society),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

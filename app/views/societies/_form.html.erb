<%= simple_form_for @society, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@society[:name]) %>
  <%= f.input :address %>
  <%= error_span(@society[:address]) %>
  <%= f.input :pincode %>
  <%= error_span(@society[:pincode]) %>
  <%= f.input :est_date %>
  <%= error_span(@society[:est_date]) %>
  <%= f.input :start_date %>
  <%= error_span(@society[:start_date]) %>
  <%= f.input :builder %>
  <%= error_span(@society[:builder]) %>
  <%= f.input :area %>
  <%= error_span(@society[:area]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                societies_path, :class => 'btn btn-default' %>
<% end %>

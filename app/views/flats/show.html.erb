<%- model_class = Flat -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:building_id) %>:</strong></dt>
  <dd><%= @flat.building_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:flat_type_id) %>:</strong></dt>
  <dd><%= @flat.flat_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @flat.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @flat.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:flat_status) %>:</strong></dt>
  <dd><%= @flat.flat_status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner_id) %>:</strong></dt>
  <dd><%= @flat.owner_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              flats_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_flat_path(@flat), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              flat_path(@flat),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
